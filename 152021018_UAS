#include <iostream>
using namespace std;

int main() {
  // Deklarasi konstanta N untuk jumlah pasangan elemen dari array
  const int N = 2;

  // Deklarasi array a dan b dengan jumlah elemen sebanyak N
  int a[n], b[N];

  // Input elemen array a dan b
  for (int i = 0; i < N; i++) {
    cout << "Masukkan elemen a[" << i << "]: ";
    cin >> a[i];
    cout << "Masukkan elemen b[" << i << "]: ";
    cin >> b[i];
  }

  // Korelasi antara setiap pasangan elemen array a dan b
  for (int i = 0; i < N; i++) {
    cout << "Korelasi antara a[" << i << "] dan b[" << i << "]: " << a[i] * b[i] << endl;
  }

  return 0;
}
